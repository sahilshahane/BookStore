@model Book

<form asp-controller="Books" asp-action="Edit" method="post">

    <input asp-for="@Model.Id" readonly hidden />


    <label asp-for="@Model.Title">Title</label>
    <input asp-for="@Model.Title" />
    <span asp-validation-for="@Model.Title" class="text-danger"></span>

    <br/>

    <label asp-for="@Model.Author">Author</label>
    <input asp-for="@Model.Author" />
    <span asp-validation-for="@Model.Author" class="text-danger"></span>

    <br />

    <label asp-for="@Model.Price">Price</label>
    <input asp-for="@Model.Price" />
    <span asp-validation-for="@Model.Price" class="text-danger"></span>

    <br />

    <label asp-for="@Model.Genre">Genre</label>
    <input asp-for="@Model.Genre" />
    <span asp-validation-for="@Model.Genre" class="text-danger"></span>

    <br />

    <button type="submit">
        Submit
    </button>

</form>