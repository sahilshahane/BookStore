@model Book

<div>
    <h1> @Model.Title </h1>
    <div style="width: 70%" class="border border-primary"> </div>
</div>

<div class="my-4">

    <h5>
        Author : <span>@Model.Author</span>
    </h5>

    <h5>
        Genre : <span>@Model.Genre</span>
    </h5>

    <h5>
        Price : <span>@Model.Price</span>
    </h5>

</div>

<div class="d-flex gap-4 justify-content-center">

    <form asp-controller="Books" asp-action="Edit" asp-route-bookId="@Model.Id" method="get">
        <button type="submit" class="btn btn-primary mt-4 mx-auto" style="width: 120px">
            Edit Book
        </button>
    </form>

    <form asp-controller="Books" asp-action="Delete" asp-route-bookId="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger mt-4 mx-auto" style="width: 120px">
            Delete Book
        </button>
    </form>
</div>